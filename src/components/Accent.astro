---
const { variant } = Astro.props;

const styles = {
  'primary':'font-bold text-lime-400 text-shadow-lime-700 text-shadow-xl',
  'secondary':'font-bold text-purple-400 text-shadow-purple-700 text-shadow-xl',
  'tertiary':'font-bold text-blue-400 text-shadow-blue-700 text-shadow-xl',
};

export type Props = {
  variant?: keyof typeof styles
}


const selected = styles[variant || 'primary'] || styles['primary'];

---

<code class={selected}><slot /></code>
